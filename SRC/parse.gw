sub mode {
	local($nick,$person,$mode) = @_;
	if ($person !~ /^\#(\S+)/) {
		$mode =~ s/://;
		$tmpnum = $nick;
	     	@getmode = split(//, $mode);
		if (($getmode[0] eq "+") && ($getmode[1] eq "o")) {
			$ISOPER{$tmpnum} = 1;
			if (isauth_num($tmpnum)) {
				$tmp = $ISAUTH{$tmpnum};
				if ($NDATA{lc($tmp)}->{CSLVL} > 0) {
					$CSERVICELVL{$tmpnum} = $NDATA{lc($tmp)}->{CSLVL};
					$numnick = $tmpnum;
					notice("Cservice Level \002$CSERVICELVL{$numnick}\002 Granted.");
				}
			}
			debug("\002IRCOP\002: $NINFO{$tmpnum}->{NICK}");
			&runoper;
		}
		elsif (($getmode[0] eq "-") && ($getmode[1] eq "o")) {
			delete($ISOPER{$tmpnum});
			delete($CSERVICELVL{$tmpnum});
			debug("\002DE-IRCOP\002: $NINFO{$tmpnum}->{NICK}");
		}
	}
	else {
		$chan = $person;
		($modes,$nicks) = split(/\s+/g, $mode,2);
		if (($modes =~ /n/i) || ($modes =~ /t/i) || ($modes =~ /i/i) || ($modes =~ /s/i) || ($modes =~ /m/i) || ($modes =~ /p/i) || ($modes =~ /k/i) || ($modes =~ /l/i)) {
			$OLDMODES = "";
			$NEWMODES = "";
			$ADDMODES = "";
			$REMMODES = "";
			@sm = split(//,$modes);
			$MTYPE = "";
			foreach $m (@sm) {
				if ($m ne "") {
					if ($m eq "\+") {
						$MTYPE = "0";
					}
					elsif ($m eq "\-") {
						$MTYPE = "1";
					}
					else {
						if ($MTYPE == 0) {
							$ADDMODES .= $m;
						}
						elsif ($MTYPE == 1) {
							$REMMODES .= $m;
						}
					}
				}
			}
			$ADDMODES =~ s/o//g;
			$ADDMODES =~ s/v//g;
			$ADDMODES =~ s/b//g;
			$REMMODES =~ s/o//g;
			$REMMODES =~ s/v//g;
			$REMMODES =~ s/b//g;
			($REMMODES,undef) = split(/ /,$REMMODES,2);
			@M = split(//,$ADDMODES);
			foreach $m (@M) {
				$CMODE{lc($chan)}->{$m} = 1;
			}
			@M = split(//,$REMMODES);
			foreach $m (@M) {
				$CMODE{lc($chan)}->{$m} = 0;
			}
			getchmodes($chan);
##	debug("NEWMODES($chan): $getchmodes_modes");
		}									
		if (isregistered_chan($chan)) {
			if ($SINFO{$nick}->{SERVERNAME} ne "") {
				wallops($OPERSERV,"Desynch: $chan");
			}
			else {
				resetmodes($chan);
			}
		}
		if (($modes =~ /o/i) || ($modes =~ /v/i) || ($modes =~ /b/i)) {
			@tmp = split(//,$modes);
			$mtype = "";
			$mtotal = "";
			$mnicks{deop} = "";
			$mnicks{op} = "";
			$mnicks{devo} = "";
			$mnicks{vo} = "";
			$nicks =~ s/\n//;
			$nicks =~ s/\r//;
			$nicks =~ s/\s* / /g;
			@mnickstok = split(/\s* /, $nicks);
			@mop = "";
			@mdeop = "";
			foreach $i (@tmp) {
				$i =~ s/\n//;
				$i =~ s/\r//;
				if ($i eq "+") { $mtype = "add"; }
				elsif ($i eq "-") { $mtype = "rem"; }				
                                elsif ($i eq "l") {
					if ($mtype eq "add") { 
						$mtotal++; 
					}
				}
                                elsif ($i eq "k") { $mtotal++; }
				elsif ($i eq "b") {
					$mnicks{$mtype}++;
					$mtotal++;
					$mtmp = $mtotal - "1";
					if ($mtype eq "rem") {
						$tmp = $mnickstok[$mtmp];
						delete($CBAN{lc($chan)}->{lc($tmp)});
##				debug("UNBAN($chan): $tmp");
					}
					if ($mtype eq "add") {
						$tmp = $mnickstok[$mtmp];
						$CBAN{lc($chan)}->{lc("$tmp")} = "1";
##				debug("BAN($chan): $tmp");

					}

				}

				elsif ($i eq "v") {
					$mnicks{$mtype}++;
					$mtotal++;
					$mtmp = $mtotal - "1";
			
					if ($mtype eq "rem") {
						push(@mdevo, $mnickstok[$mtmp]);
						$tmp = $mnickstok[$mtmp];
						$tmp = $NINFO{$tmp}->{NICK};
						&devo_nick($chan,$tmp);
##				debug("DEVOICE($chan): $tmp");
					}
					if ($mtype eq "add") {
						push(@mvo, $mnickstok[$mtmp]);
						$tmp = $mnickstok[$mtmp];
						$tmp = $NINFO{$tmp}->{NICK};
						&vo_nick($chan,$tmp);
##				debug("VOICE($chan): $tmp");

					}

				}
				elsif ($i eq "o") {
					$mnicks{$mtype}++;
					$mtotal++;
					$mtmp = $mtotal - "1";
			
					if ($mtype eq "add") {
						push(@mdeop, $mnickstok[$mtmp]);
						$tmp = $mnickstok[$mtmp];
						$tmp = $NINFO{$tmp}->{NICK};
						&op_nick($chan,$tmp);
##				debug("OP($chan): $tmp");
        				}
					if ($mtype eq "rem") {
						push(@mop, $mnickstok[$mtmp]);
						$tmp = $mnickstok[$mtmp];
						$tmp = $NINFO{$tmp}->{NICK};
						&deop_nick($chan,$tmp);
##				debug("DEOP($chan): $tmp");

					}
				}
			}
		}
	}
}

	
