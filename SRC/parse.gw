sub ctcpreply {
	local($nick,$service,$ctcp) = @_;
	$ctcp =~ s/\n//;
	$ctcp =~ s/\r//;
	if ($service !~ /\#/i) {
		if ($ctcp =~ /VERSION/i) {
			&out("$service O $nick :\caVERSION $VER [IRC Services Package]\ca");
		}	
		elsif ($ctcp =~ /ping/i) {
			($type,$ping) = split(/ /,$ctcp);			
			$ping =~ s/\n//;
			$ping =~ s/\n//;
			out("$service O $nick :\caPING $ping\ca");
		}
		else {
			out("$service O $nick :\caERROR Unknown CTCP Query\ca");
		}
	}
}
