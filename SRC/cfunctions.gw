sub ispermban {
	local($channel,$mask) = @_;
	$found = 0;
	$PERMBANS = $CDATA{lc($channel)}->{PERMBANS};
	@PB = split(/\ƒ/,$PERMBANS);
	foreach $i (@PB) 
	{
		if ($i ne "") {
			($PB_MASK,$PB_SETTER,$PB_DATE,$PB_REASONS) = split(/±/,$i,4);
			if (lc($PB_MASK) eq lc($mask)) {
				return 1;
				$found =1;
			}
		}	
	}
	if ($found == 0) {
		return 0;
	}      
                                                        
