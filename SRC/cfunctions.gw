sub submode {
	local($chan,$modes) = @_;
	if (($modes =~ /n/i) || ($modes =~ /t/i) || ($modes =~ /i/i) || ($modes =~ /s/i) || ($modes =~ /m/i) || ($modes =~ /p/i) || ($modes =~ /k/i) || ($modes =~ /l/i)) {
		$OLDMODES = "";
		$NEWMODES = "";
		$ADDMODES = "";
		$REMMODES = "";
		@sm = split(//,$modes);
		$MTYPE = "";
		foreach $m (@sm) {
			if ($m ne "") {
				if ($m eq "\+") {
					$MTYPE = "0";
				}
				elsif ($m eq "\-") {
					$MTYPE = "1";
				}
				else {
					if ($MTYPE == 0) {
						$ADDMODES .= $m;
					}
					elsif ($MTYPE == 1) {
						$REMMODES .= $m;
					}
				}
			}
		}
		$ADDMODES =~ s/o//g;
		$ADDMODES =~ s/v//g;
		$ADDMODES =~ s/b//g;
		$REMMODES =~ s/o//g;
		$REMMODES =~ s/v//g;
		$REMMODES =~ s/b//g;
		($REMMODES,undef) = split(/ /,$REMMODES,2);
		@M = split(//,$ADDMODES);
		foreach $m (@M) {
			$CMODE{lc($chan)}->{$m} = 1;
		}
		@M = split(//,$REMMODES);
		foreach $m (@M) {
			$CMODE{lc($chan)}->{$m} = 0;
		}
		getchmodes($chan);
		debug("NEWMODES($chan): $getchmodes_modes");
	}
}									
 
sub resetmodes {
	local($chan) = @_;
	$chan = lc($chan);
	if ($CDATA{$chan}->{LOCKMODE} eq "") { }
	else {
		$CHANMODES = &getchmodes($chan);
		$LOCKMODES = $CDATA{$chan}->{LOCKMODE};
		$CHANMODES =~ s/\+//;
		$LOCKMODES =~ s/\+//;
		$BUFFER = "+";
		foreach $i (split(//,$LOCKMODES)) {
			if ($CHANMODES !~ /$i/) {
				$BUFFER .= $i;
			}
		}
		$BUFFER .= "-";
		foreach $i (split(//,$CHANMODES)) {
			if ($LOCKMODES !~ /$i/) {
				$BUFFER .= $i;
			}
		}
		if ($BUFFER =~ /k/) {
			$BUFFER .= " \*";
		}
		out("$CSNUM M $chan $BUFFER");
		&submode($chan,$BUFFER);
	}
}

sub returnchlevel {
	local($chan,$nick) = @_;
	$chan = lc($chan);
	$nick = lc($nick);
	$found = 0;
	$tmp = $CDATA{$chan}->{USERS};
	@tmpusers = split(/ /,$tmp);
	foreach $i (@tmpusers) {
		if ($i ne "") {
			($getchlevel_nick,$getchlevel_level,$getchlevel_adder) = split(/\@/,$i,3);
			if (lc($getchlevel_nick) eq $nick) {
				$found = 1;
				return $getchlevel_level;
			}
		}
	}
	if ($found != 1) {
		if ($CSERVICELVL{$numnick} >= $CSERVICE) {
			&notice("\002Cservice overriding access with level $CSERVICELVL{$numnick}\002");
			return $CSERVICELVL{$numnick};
		}
		else {
			return 0;
		}
	}
}

