sub getchlevel {
	local($chan,$nick) = @_;
	$chan = lc($chan);
	$nick = lc($nick);
	$found = 0;
	$tmp = $CDATA{$chan}->{USERS};
	@tmpusers = split(/ /,$tmp);
	foreach $i (@tmpusers) {
		if ($i ne "") {
			($getchlevel_nick,$getchlevel_level,$getchlevel_adder) = split(/\@/,$i,3);
			if ((lc($getchlevel_nick) eq $nick) && ($getchlevel_level >= $HELP{$CHANSERV}->{$COM}->{LEVEL})) {
				return 1;
				$found = 1;
			}
		}
	}
	if ($found != 1) {
		return 0;
	}
}
