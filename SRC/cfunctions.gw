sub getchmodes {
	local($chan) = @_;
	$getchmodes_modes = "\+";
	if ($CMODE{lc($chan)}->{n} == 1) {
		$getchmodes_modes .= "n";
	}
	if ($CMODE{lc($chan)}->{t} == 1) {
		$getchmodes_modes .= "t";
	}

	if ($CMODE{lc($chan)}->{i} == 1) {
		$getchmodes_modes .= "i";
	}

	if ($CMODE{lc($chan)}->{m} == 1) {
		$getchmodes_modes .= "m";
	}

	if ($CMODE{lc($chan)}->{p} == 1) {
		$getchmodes_modes .= "p";
	}

	if ($CMODE{lc($chan)}->{s} == 1) {
		$getchmodes_modes .= "s";
	}

	if ($CMODE{lc($chan)}->{l} == 1) {
		$getchmodes_modes .= "l";
	}

	if ($CMODE{lc($chan)}->{k} == 1) {
		$getchmodes_modes .= "k";
	}
	return $getchmodes_modes;
}

